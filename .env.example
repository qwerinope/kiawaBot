# Twitch Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Twitch API Credentials
CLIENT_ID=your_twitch_client_id_here
CLIENT_SECRET=your_twitch_client_secret_here
IRC_OAUTH=your_irc_oauth_token_here
BOT_NAME=your_bot_username_here
BOT_ID=your_bot_user_id_here
BROADCASTER_NAME=your_streamer_username_here
BROADCASTER_ID=your_streamer_id_here

INCENTIVE_PATH=./data/incentive.txt

# Bot Configuration
NODE_ENV=production

# Add any other environment variables your bot needs
# Example:
# DATABASE_URL=your_database_url_here
# API_KEY=your_api_key_here
